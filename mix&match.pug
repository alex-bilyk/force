	// Start section Multibrand
	section#multibrand.multibrand.mm--multibrand
		.container
			.row
				img.img-big(src='img/multibrand/bg-multibrand-text.png', alt='multibrand')
				img.img-small(src='img/multibrand/bg-multibrand-text-resp.png', alt='multibrand')
				.multibrand-book
					img(src='img/multibrand/multibrand-book.png', alt='book')
				.col-12.multibrand-desc
					.multibrand-desc-text
						h3
							| COMPLEMENTARY 
							br
							|  MULTIBRAND DISTRIBUTION
						p
							| We join the world’s largest producers of Workwear and Protective Equipment. We are official distributors of more than 200 brands and we provide an offer of more than 30.000 product references. We equip from head to toe!
						a.btn.btn-multibrand(href='#')
							| Know More
							svg.icon
								use(xlink:href='#arrow-right')
