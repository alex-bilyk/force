extends template/base

block title
	| Mix&Match

block content

	// Start section Mix_match
	section#mix_match.mix_match.mm--mix_match
		.container
			.row
				img.bg-mix_match-img(src='img/mix_match/bg-mix_match-img.png', alt='mix_match-site')
				.col-12.mix_match-desc
					.content
						h3
							| Mix 
							br
							|  & Match
						p
							| O Mix & Match, através do nosso configurador online – Design Your Garment - |permite a cada utilizador, as mais diversas formas de personalização e |desenvolvimento de um uniforme de trabalho distinto, com mais de 1000 combinações |possíveis (13 cores, 20 detalhes, seleção de materiais, pespontos, tipo de bolsos, | etc.), disponível para produções a partir de 100 peças e com prazos de entrega de | 4 a 6 semanas. 
							a.read_more(href='#') Read more…

						a.btn(href='#')
							| Try it Now
							svg.icon
								use(xlink:href='#arrow-right')

						a.btn.btn-crystalline(href='#')
							| Contact Us
							svg.icon
								use(xlink:href='#arrow-right')
	// Finish section Mix_match

